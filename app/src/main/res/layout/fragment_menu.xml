<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGoToFloors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32sp"
        android:background="@drawable/button_shape"
        android:paddingVertical="12dp"
        android:text="Floors"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoToRooms"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGoToRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32sp"
        android:background="@drawable/button_shape"
        android:paddingVertical="12dp"
        android:text="Rooms"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGoToStudents"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoToFloors"
        tools:layout_editor_absoluteX="32dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGoToStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32sp"
        android:background="@drawable/button_shape"
        android:paddingVertical="12dp"
        android:text="Students"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoToRooms"
        tools:layout_editor_absoluteX="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>